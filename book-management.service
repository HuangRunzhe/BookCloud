[Unit]
Description=Family Book Management System
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/path/to/your/book-management/backend
Environment=PATH=/path/to/your/book-management/venv/bin
ExecStart=/path/to/your/book-management/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

